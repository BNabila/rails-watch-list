<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6">
      <div class="bg-white rounded p-3 shadow">
        <h2>Create a new list</h2>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name %>
          <%= f.input :movie_url %>
          <%= f.submit "submit list", class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
